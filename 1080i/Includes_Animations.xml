<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="VisibleFadeEffect">
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" start="0" end="100" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="150" delay="0" center="auto" tween="circle" easing="inout"/>
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="150" delay="0" center="auto" tween="circle" easing="inout"/>
        </animation>
        <animation type="Visible" reversible="false">
            <effect type="fade" start="0" end="100" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="150" delay="0" center="auto" tween="circle" easing="inout"/>
        </animation>
        <animation type="Hidden" reversible="false">
            <effect type="fade" start="100" end="0" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="150" delay="0" center="auto" tween="circle" easing="inout"/>
        </animation>
    </include>
    <include name="TopBarVisibleFadeEffect">
        <animation type="Conditional" reversible="false" condition="[ControlGroup(9900).HasFocus()|Control.HasFocus(8998)|Control.HasFocus(8997)]">
            <effect type="fade" start="0" end="100" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="150" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
        <animation type="Conditional" reversible="false" condition="![ControlGroup(9900).HasFocus()|Control.HasFocus(8998)|Control.HasFocus(8997)]">
            <effect type="fade" start="100" end="0" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="150" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
    </include>
    <include name="NowPlayingVisibleFadeEffect">
        <animation type="Visible" reversible="false">
            <effect type="fade" start="0" end="100" time="300" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
        <animation type="Hidden" reversible="false">
            <effect type="fade" start="100" end="0" time="300" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
    </include>
    <include name="VisibleFadeEffectDelay">
        <animation type="Visible" reversible="false">
            <effect type="fade" start="0" end="100" time="150" delay="150" tween="circle" easing="inout"/>
            <effect type="slide" start="50,0" end="0,0" time="150" delay="150" tween="cubic" easing="out"/>
        </animation>
    </include>
    <include name="UnderFade">
        <animation effect="fade" start="0" end="100" time="200" tween="cubic" easing="in">WindowOpen</animation>
        <animation effect="fade" start="100" end="0" time="0">WindowClose</animation>
    </include>
    <include name="UpperFade">
        <animation effect="fade" start="0" end="100" time="100">WindowOpen</animation>
        <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
    </include>
    <include name="OSDFade">
        <animation effect="fade" start="0" end="100" time="100">WindowOpen</animation>
        <animation effect="fade" start="100" end="0" time="50">WindowClose</animation>
    </include>
    <include name="MusicOSDFade">
        <animation effect="fade" time="500">Visible</animation>
        <animation effect="fade" time="200">Hidden</animation>
    </include>
    <include name="MusicOSDSlideRight">
        <animation type="Visible">
            <effect type="slide" tween="circle" easing="out" time="150" start="1350,0"/>
        </animation>
        <animation type="Hidden">
            <effect type="fade" start="100" end="0" time="150"/>
            <effect type="slide" tween="circle" easing="in" time="150" end="1350,0"/>
        </animation>
    </include>
    <include name="OpenClose">
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" start="0" end="100" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="105" end="100" time="150" delay="0" center="960,540" tween="circle" easing="inout"/>
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="105" time="150" delay="0" center="960,540" tween="circle" easing="inout"/>
        </animation>
    </include>
    <include name="DialogOpenClose">
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" start="0" end="100" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="150" delay="0" center="960,540" tween="circle" easing="inout"/>
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="150" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="150" delay="0" center="960,540" tween="circle" easing="inout"/>
        </animation>
    </include>
    <include name="NotificationOpenClose">
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" start="0" end="100" time="300" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="110" end="100" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="300" delay="0" tween="circle" easing="inout"/>
            <effect type="zoom" start="100" end="110" time="300" delay="0" center="960,59" tween="circle" easing="inout"/>
        </animation>
    </include>
    <include name="PlexbmcFixTrick">
        <animation effect="slide" time="0" start="0,0" end="4000,0">WindowOpen</animation>
        <animation effect="slide" time="0" end="-4000,0">WindowClose</animation>
        <posx>-4000</posx>
    </include>
    <include name="Icon_Fade">
        <animation type="Visible" reversible="false">
            <effect type="fade" start="0" end="100" time="300" tween="sine" easing="out"/>
            <effect type="slide" start="50,0" end="0,0" time="300" tween="cubic" easing="out"/>
        </animation>
    </include>
    <include name="Shelf_Delay">
        <visible>System.IdleTime(1)</visible>
        <animation effect="fade" start="0" end="100" time="200" delay="400" condition="System.IdleTime(1)">Conditional</animation>
        <animation effect="fade" start="100" end="0" time="0" condition="!System.IdleTime(1)">Conditional</animation>
    </include>
    <include name="KenBurns">
        <animation effect="zoom" start="110" end="130" center="auto" time="15000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(KenBurnsEffect)">Conditional</animation>
        <animation effect="slide" start="-10,-10" end="20,20" time="7000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(KenBurnsEffect)">Conditional</animation>
    </include>
    <include name="SlideView">
        <animation effect="slide" tween="circle" easing="in" time="150" start="0,0" end="-780,0" condition="control.hasfocus(60)+[!IsEmpty(ListItem.Plot)|!IsEmpty(ListItem.Property(Addon.Description))|!IsEmpty(ListItem.Property(Artist_Description))|!IsEmpty(ListItem.Property(Album_Description))|!IsEmpty(ListItem.Plot)]+Skin.HasSetting(SlideListToLeft)">Conditional</animation>
    </include>
    <include name="HideMediaInfo">
        <animation effect="fade" time="150" start="100" end="0" condition="control.hasfocus(60)+[!IsEmpty(ListItem.Plot)|!IsEmpty(ListItem.Property(Addon.Description))|!IsEmpty(ListItem.Property(Artist_Description))|!IsEmpty(ListItem.Property(Album_Description))|!IsEmpty(ListItem.Plot)]+Skin.HasSetting(SlideListToLeft)">Conditional</animation>
    </include>
    <include name="SlideViewUnknown">
        <animation effect="slide" tween="circle" easing="in" time="150" start="0,0" end="-780,0" condition="![!IsEmpty(ListItem.Plot)|!IsEmpty(ListItem.Property(Addon.Description))|!IsEmpty(ListItem.Property(Artist_Description))|!IsEmpty(ListItem.Property(Album_Description))|!IsEmpty(ListItem.Plot)]">Conditional</animation>
    </include>
    <include name="Animation_ViewsCDart">
        <animation effect="rotate" end="-360" center="auto" time="5000" loop="true" reversible="false" condition="[[Player.HasAudio|Player.HasVideo] + !Player.Paused]">Conditional</animation>
        <animation effect="rotate" start="0" end="-360" center="auto" time="40000" loop="true" reversible="false" condition="!Player.HasVideo">Conditional</animation>
        <!-- <fadetime>500</fadetime> -->
    </include>
</includes>
